<Window x:Class="Task_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
         xmlns:gif="http://wpfanimatedgif.codeplex.com"
        xmlns:local="clr-namespace:Task_WPF"
        mc:Ignorable="d"
        Title="Animation Task" Height="450" Width="800"
        >
    <Grid>
        <TextBlock x:Name="Timer" HorizontalAlignment="Center"></TextBlock>
        <Button Width="100" Height="50" Content="Click_me" Click="Button_Click_Counter"></Button>

        <!--Insert your gif in this MediaElement-->
        <MediaElement x:Name="loadding" Source="your Path gif" Width="50" Height="100" VerticalAlignment="Bottom" LoadedBehavior="Manual"  IsHitTestVisible="False"/>
   
    </Grid>
    
</Window>
